<%-include("partials/header")-%>
<div class="container-fluid" style="margin-top: 2rem;">
    <div class="row justify-content-center">
        <div class="col-10" style="text-align: center;">
            <h1><%=name%></h1>
            <p><h3><%=country%></h3></p><hr>
            <p><h3>Temperature: <%=temperature%></h3></p>
            <p><h3>Transport: <%=transport%></h3></p>
        </div>
    </div>
    <hr>
    <div class="row justify-content-center" style="text-align: center;">
        <h3>Let's talk about food!</h3>
    </div>
    <div class="row justify-content-around" style="margin-top: 1rem;">
        <%food.forEach(function(food){ %>
            <div class="col-md-5 col-8" style="text-align: center;padding: 1rem;border: 2px solid black;border-radius: 5px;">
                <img src="<%=food.foodImage%>" alt="image" style="width: 80%;margin-top: 1rem;height: 250px;border-radius: 10px;">
                <p><h3><%=food.foodName%></h3></p>
                <div style="text-align: start;">
                    <p><h5><%=food.foodDesc%></h5></p>
                </div>
            </div>
        <% }) %>
    </div>
    <hr>
    <div class="row justify-content-center" style="text-align: center;margin-top: 3rem;">
        <h3>Exciting Places to visit!</h3>
    </div>
    <div class="row justify-content-around" style="margin-top: 1rem;">
        <%sites.forEach(function(site){ %>
            <div class="col-md-5 col-8" style="text-align: center;padding: 1rem;border: 2px solid black;border-radius: 5px; margin-top: 2rem;">
                <img src="<%=site.siteImage%>" alt="image" style="width: 80%;margin-top: 1rem;height: 250px;border-radius: 10px;">
                <p><h3><%=site.siteName%></h3></p>
                <div style="text-align: start;">
                    <p><h5><%=site.siteFact%></h5></p>
                </div>
            </div>
        <% }) %>
    </div>
</div>


<%-include("partials/footer")-%>